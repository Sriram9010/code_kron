#include<stdio.h>
int main(){
    int size;
    scanf("%d",&size);
    int arr[size];
    if(size==0||size<0){
        printf("Invalid Input");
    }
    for(int i=0;i<size;i++){
        scanf("%d ",&arr[i]);
    }
    for(int i=0;i<size;i++){
        printf("%d ",arr[i]);
    }
}
==============================================================================================================================================================
#include<stdio.h>
int main(){
    int size;
    scanf("%d",&size);
    int arr[size];
    if(size==0||size<0){
        printf("Invalid array size");
        return 0;
    }
    for(int i=0;i<size;i++){
        scanf("%d ",&arr[i]);
    }

    printf("Even elements are :");
    for(int i=0;i<size;i++){
      if(arr[i]%2==0){
         printf(" %d",arr[i]);
      }
        
      }
      printf("\n");
      printf("Odd elements are :");
      for(int i=0;i<size;i++){
          if(arr[i]%2!=0){
            printf(" %d",arr[i]);
          }
        }
        
        return 0;
    }
==============================================================================================================================================================


