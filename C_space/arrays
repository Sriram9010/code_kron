#include<stdio.h>
int main()
{
int size;
printf("enter how many elements you need!");
scanf("%d",&size); 
int arr[size];
for(int i=0;i<size;i++) 
{
 printf("enter the element for index %d\n",i);
 scanf("%d",&arr[i]);  
}
 int add = arr[0];
 int sub = arr[0];
 int multi = arr[0];
 for(int i=1;i<size;i++){
     add += arr[i];
     sub -= arr[i];
     multi += arr[i];
 }
   printf("Sum = %d\n",add);
   printf("sub = %d\n",sub);
   printf("multi = %d\n",multi);   
return 0;
}
